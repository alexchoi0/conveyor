# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:5173

# Database Configuration
# SQLite (default) - stores in prisma/dev.db
DATABASE_URL="file:./prisma/dev.db"

# For PostgreSQL (production):
# 1. Copy prisma/schema.postgresql.prisma to prisma/schema.prisma
# 2. Update DATABASE_URL below
# 3. Run: npm run db:generate && npm run db:push
# DATABASE_URL="postgresql://user:password@localhost:5432/etl_router?schema=public"

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
# Callback URL: http://localhost:5173/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (get from https://github.com/settings/developers)
# Callback URL: http://localhost:5173/api/auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# First Super Admin Email (will be promoted on first sign-in)
SUPER_ADMIN_EMAIL=admin@example.com

# Authentication is disabled by default
# Enable by setting authEnabled=true in the settings table

# For production, also set:
# VITE_BETTER_AUTH_URL=https://your-domain.com
